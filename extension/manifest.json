{
  "manifest_version": 3,
  "name": "SAOA",
  "version": "0.1",
  "description": "A cross-platform browser extension designed to streamline and personalize your outreach process on platforms like Whop, Telegram, Discord, and more.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "32": "saoa_32.png",
      "48": "saoa_48.png",
      "64": "saoa_64.png",
      "128": "saoa_128.png"
    }
  },
  "icons": {
    "48": "saoa_48.png",
    "128": "saoa_128.png"
  },
  "background": {
    "service_worker": "extension/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "extension/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ]
}

